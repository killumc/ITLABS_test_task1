<UserControl x:Class="Poll_ver2.MVVM.View.PopupAgreement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="1122" d:DesignWidth="960">

    <Border 
       Background="White" 
       BorderBrush="Gray" BorderThickness="1" 
       Padding="60, 70"
       CornerRadius="36">
        <StackPanel>
            <TextBlock 
               FontSize="28"
               FontWeight="SemiBold"
               Foreground="Black"
               Margin="0 0 0 24"
               Style="{StaticResource HeadingParagraph}"
               Text="{StaticResource PopupAgreementTitle}"/>

            <RichTextBox IsReadOnly="True" BorderThickness="0" Background="Transparent"
                        Style="{StaticResource RichTextBox}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText1}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="e-mail"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText2}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText3}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText4}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText5}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText6}"/>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText7}"/>
                        <Hyperlink
                           NavigateUri="http://corp-university-privacy@sberbank.ru"
                           Foreground="Black"
                           >corp-university-privacy@sberbank.ru</Hyperlink>
                    </Paragraph>
                    <Paragraph>
                        <Run Text="{StaticResource PopupAgreementText8}"/>
                    </Paragraph>

                </FlowDocument>
            </RichTextBox>

            <Button
               Height="94"
               Width="338"
               FontSize="24"
               Margin="0 60 0 0"
               Style="{StaticResource popup_btn}"
               Content="{StaticResource Exit}"
               Command="{Binding AgreementPopup_ClouseCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
