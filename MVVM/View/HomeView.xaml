<Page x:Class="Poll_ver2.MVVM.View.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="HomeView">


    <Grid Width="1080" Height="1920">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/Resourses/logo.png" 
               Grid.Row="0"
               Margin="60 60 0 0"
               Width="368"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <StackPanel 
            Grid.Row="1" 
            Margin="142 300">

            <TextBlock 
                x:Name="LogoPage1" 
                Style="{StaticResource Heading}"
                Text="{StaticResource HomeViewTitle}"
            />

            <TextBlock 
           x:Name="textPage1" 
           Style="{StaticResource Text}"
           TextAlignment="Center"
           FontSize="36"
           Margin="0 60 0 60"
           TextWrapping="Wrap"
            Text="{StaticResource SberQ_Page1}"/>


            <Border 
           CornerRadius="36" 
           Background="{StaticResource ButtonBrush_transparent}"
           Margin="70">

                <StackPanel Orientation="Horizontal">

                    <Image 
                        x:Name="ImageQRPage1" 
                        Source="/Assets/Resourses/qr-code page1.png"
                        Margin="24 24 36 24"
                        Height="215"/>

                    <TextBlock 
                        x:Name="QR_text" 
                        Margin="0 24 0 24"
                        Style="{StaticResource QRHeading}" 
                        Width="356">
                        
                    <Run Text="{StaticResource HomeView_QR_info1}"/><LineBreak/>
                    <Run Text="{StaticResource HomeView_QR_info2}"/><LineBreak/>
                    <Run Text="{StaticResource HomeView_QR_info3}"/>
                    </TextBlock>

                </StackPanel>
            </Border>

            <Button x:Name="Page1_btn" 
                    Style="{StaticResource white_btn}"
                    Width="510"
                    Height="122"
                    Margin="50"
                    FontWeight="SemiBold"
                    Command="{Binding NavigateToPollCommand}"
                    Content="{StaticResource HomeViewBtn}"
                    />
        </StackPanel>

    </Grid>
</Page>
