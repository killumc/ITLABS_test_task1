<Page
    x:Class="Poll_ver2.MVVM.View.PollView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Poll_ver2.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Poll_ver2.MVVM.ViewModel"
    Title="PollView"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:SliderConverter x:Key="SliderConverter" />
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Row="0"
                Width="368"
                Margin="60,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Assets/Resourses/logo.png" />

            <Button
                x:Name="BtnBack_Page2"
                Grid.Column="2"
                Margin="60,60,60,47"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding BackCommand}"
                Style="{StaticResource back_btn}">
                <TextBlock Style="{StaticResource Text}" Text="{StaticResource GoBack}" />
            </Button>


            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="60,0,60,0">
                <TextBlock
                    x:Name="Heading_Page2"
                    HorizontalAlignment="Left"
                    Style="{StaticResource Heading}"
                    Text="{StaticResource PollView_Title}" />


                <TextBlock
                    x:Name="Text_Page2"
                    Margin="0,42,0,42"
                    Style="{StaticResource Text}">
                    <Run Text="{StaticResource PollView_text1}" />
                    <LineBreak /><LineBreak />
                    <Run Text="{StaticResource PollView_text2}" />

                </TextBlock>


                <Border
                    Padding="40"
                    Background="{StaticResource ButtonBrush_transparent}"
                    CornerRadius="36">
                    <StackPanel>

                        <StackPanel x:Name="question1" Margin="0,0,0,72">
                            <TextBlock
                                x:Name="HeadingQuest1"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Style="{StaticResource Heading}"
                                Text="{StaticResource Question1}" />

                            <Slider
                                x:Name="Slider1"
                                Margin="-15,0,-15,0"
                                IsSnapToTickEnabled="True"
                                Maximum="2"
                                Minimum="0"
                                Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1"
                                Value="{Binding SliderValue1, Mode=TwoWay}" />


                            <Grid
                                Grid.Row="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question1_Value1}"
                                    TextAlignment="Left" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question1_Value2}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question1_Value3}"
                                    TextAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question2" Margin="0,0,0,72">
                            <TextBlock
                                x:Name="HeadingQuest2"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Style="{StaticResource Heading}"
                                Text="{StaticResource Question2}" />


                            <Slider
                                x:Name="Slider2"
                                Margin="-15,0,-15,0"
                                IsSnapToTickEnabled="True"
                                Maximum="2"
                                Minimum="0"
                                Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1"
                                Value="{Binding SliderValue2, Mode=TwoWay}" />

                            <Grid
                                Grid.Row="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question2_Value1}"
                                    TextAlignment="Left" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question2_Value2}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question2_Value3}"
                                    TextAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question3" Margin="0,0,0,72">
                            <TextBlock
                                x:Name="HeadingQuest3"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Style="{StaticResource Heading}"
                                Text="{StaticResource Question3}" />

                            <Slider
                                x:Name="Slider3"
                                Margin="-15,0,-15,0"
                                IsSnapToTickEnabled="True"
                                Maximum="2"
                                Minimum="0"
                                Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1"
                                Value="{Binding SliderValue3, Mode=TwoWay}" />

                            <Grid
                                Grid.Row="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="293*" />
                                    <ColumnDefinition Width="293*" />
                                    <ColumnDefinition Width="163*" />
                                    <ColumnDefinition Width="130*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Width="147"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question3_Value1}"
                                    TextAlignment="Left" />
                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question3_Value2}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Grid.Column="3"
                                    Width="129"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question3_Value3}"
                                    TextAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question4" Margin="0,0,0,72">
                            <TextBlock
                                x:Name="HeadingQuest4"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Style="{StaticResource Heading}"
                                Text="{StaticResource Question4}" />

                            <Slider
                                x:Name="Slider4"
                                Margin="-15,0,-15,0"
                                IsSnapToTickEnabled="True"
                                Maximum="2"
                                Minimum="0"
                                Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1"
                                Value="{Binding SliderValue4, Mode=TwoWay}" />

                            <Grid
                                Grid.Row="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Width="214"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question4_Value1}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Width="228"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question4_Value2}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question4_Value3}"
                                    TextAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question5" Margin="0">
                            <TextBlock
                                x:Name="HeadingQuest5"
                                HorizontalAlignment="Left"
                                FontSize="28"
                                Style="{StaticResource Heading}"
                                Text="{StaticResource Question5}" />

                            <Slider
                                x:Name="Slider5"
                                Margin="-15,0,-15,0"
                                IsSnapToTickEnabled="True"
                                Maximum="2"
                                Minimum="0"
                                Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1"
                                Value="{Binding SliderValue5, Mode=TwoWay}" />

                            <Grid
                                Grid.Row="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question5_Value1}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question5_Value2}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Width="261"
                                    Margin="32,0,0,0"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource TextSlider}"
                                    Text="{StaticResource Question5_Value3}"
                                    TextAlignment="Right" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Button
                    x:Name="SendReply"
                    Width="445"
                    Height="109"
                    Margin="0,42,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding NavigateToResultCommand}"
                    Content="{StaticResource SendResult}"
                    Style="{StaticResource white_btn}" />
            </StackPanel>

        </Grid>
    </Viewbox>
</Page>
