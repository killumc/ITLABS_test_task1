<Page x:Class="Poll_ver2.MVVM.View.PollView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
      xmlns:vm="clr-namespace:Poll_ver2.MVVM.ViewModel"
      mc:Ignorable="d" 
       d:DesignHeight="1920" d:DesignWidth="1080"
      Title="PollView">

    <Page.DataContext>
        <vm:PollViewModel/>
    </Page.DataContext>
    
    <Grid>
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Resourses/background2.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Assets/Resourses/logo.png" 
       Grid.Row="0"
       Margin="60 60 0 0"
       Width="368"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>

            <Button
            x:Name="BtnBack_Page2"
            Grid.Column="2"
            BorderThickness="1"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="60 60 60 47"
            Width="223"
            Height="62"
            Click="GoBack"
            Style="{StaticResource transparent_btn}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Style="{StaticResource Text}">
                Назад
                </TextBlock>
            </Button>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="60 0 60 0">

                <TextBlock x:Name="Heading_Page2"
                       HorizontalAlignment="Left"
                       Style="{StaticResource Heading}"
                       >
                Оценка SberQ
                </TextBlock>

                <TextBlock x:Name="Text_Page2"
                       Margin="0 42 0 42"
                       Style="{StaticResource Text}">
                Для прохождения оценки SberQ Top вам потребуется 8 часов,
                а для нашего сегодняшнего теста на карьерную осознанность — всего 1,5 минуты.
                <LineBreak/><LineBreak/>
                Ответьте на 5 вопросов и получите рекомендации к развитию,
                а также узнайте больше про оценку SberQ и программы СберУниверситета.
                Результаты отправим на указанную вами электронную почту.
                </TextBlock>


                <Border 
        CornerRadius="36" 
        Background="{StaticResource ButtonBrush_transparent}"
        
                Padding="40">
                    <StackPanel >

                        <StackPanel x:Name="question1"
        Margin="0 0 0 72">
                            <TextBlock x:Name="HeadingQuest1"
                           Style="{StaticResource Heading}"
                           FontSize="28"
                           HorizontalAlignment="Left"
                           Text="{StaticResource Question1}">
                            </TextBlock>

                            <Slider x:Name="Slider1"
                                    Style="{StaticResource CustomSliderStyle}"
                                    Minimum="0"
                                    Maximum="2"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    Margin="-15 0 -15 0"
                                    Value="{Binding SliderValue1, Mode=TwoWay}"/>


                            <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Text="{StaticResource Question1_Value1}" 
                                    Style="{StaticResource TextSlider}" 
                                    Grid.Column="0" 
                                    TextAlignment="Left" />
                                <TextBlock 
                                Text="{StaticResource Question1_Value2}" 
                                Style="{StaticResource TextSlider}"
                                Grid.Column="1" 
                                TextAlignment="Center" />
                                <TextBlock 
                                Text="{StaticResource Question1_Value3}" 
                                Style="{StaticResource TextSlider}"
                                Grid.Column="2" 
                                TextAlignment="Right" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question2"
Margin="0 0 0 72">
                            <TextBlock 
                                x:Name="HeadingQuest2"
                                Style="{StaticResource Heading}"
                                FontSize="28"
                                HorizontalAlignment="Left"
                                Text="{StaticResource Question2}"/>


                            <Slider x:Name="Slider2"
                                    Style="{StaticResource CustomSliderStyle}"
                                    Minimum="0"
                                    Maximum="2"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    Margin="-15 0 -15 0"
                                    Value="{Binding SliderValue2, Mode=TwoWay}"/>

                            <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                Text="{StaticResource Question2_Value1}" 
                                Style="{StaticResource TextSlider}" 
                                Grid.Column="0" 
                                TextAlignment="Left" />
                                <TextBlock 
                                Text="{StaticResource Question2_Value2}" 
                                Style="{StaticResource TextSlider}"
                                Grid.Column="1" 
                                TextAlignment="Center" />
                                <TextBlock 
                                Text="{StaticResource Question2_Value3}" 
                                Style="{StaticResource TextSlider}"
                                TextAlignment="Right"
                                Grid.Column="2"  />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question3"
        Margin="0 0 0 72">
                            <TextBlock x:Name="HeadingQuest3"
                                Style="{StaticResource Heading}"
                                FontSize="28"
                                HorizontalAlignment="Left"
                                Text="{StaticResource Question3}"/>

                            <Slider x:Name="Slider3"
                                    Style="{StaticResource CustomSliderStyle}"
                                    Minimum="0"
                                    Maximum="2"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    Margin="-15 0 -15 0"
                                    Value="{Binding SliderValue3, Mode=TwoWay}"/>

                            <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="293*" />
                                    <ColumnDefinition Width="293*" />
                                    <ColumnDefinition Width="163*" />
                                    <ColumnDefinition Width="130*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                Text="{StaticResource Question3_Value1}" 
                                Style="{StaticResource TextSlider}" 
                               Grid.Column="0" 
                                HorizontalAlignment="Left"
                                TextAlignment="Left" 
                                Width="147" />
                                <TextBlock 
                                Text="{StaticResource Question3_Value2}" 
                                Style="{StaticResource TextSlider}"
                               Grid.Column="1" 
                                TextAlignment="Center" />
                                <TextBlock 
                                Text="{StaticResource Question3_Value3}" 
                                Style="{StaticResource TextSlider}"
                                HorizontalAlignment="Right"
                                TextAlignment="Right"
                               Grid.Column="3" 
                                Width="129" />
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question4"
        Margin="0 0 0 72">
                            <TextBlock x:Name="HeadingQuest4"
                            Style="{StaticResource Heading}"
                            FontSize="28"
                            HorizontalAlignment="Left"
                            Text="{StaticResource Question4}"/>

                            <Slider x:Name="Slider4"
                                    Style="{StaticResource CustomSliderStyle}"
                                    Minimum="0"
                                    Maximum="2"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    Margin="-15 0 -15 0"
                                    Value="{Binding SliderValue4, Mode=TwoWay}"/>

                            <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                Text="{StaticResource Question4_Value1}" 
                                Style="{StaticResource TextSlider}" 
                               Grid.Column="0" 
                                HorizontalAlignment="Left" Width="214" />
                                <TextBlock 
                                Text="{StaticResource Question4_Value2}" 
                                Style="{StaticResource TextSlider}"
                               Grid.Column="1" 
                                HorizontalAlignment="Center" 
                                TextAlignment="Center" Width="228"/>
                                <TextBlock 
                                Text="{StaticResource Question4_Value3}" 
                                Style="{StaticResource TextSlider}"
                               Grid.Column="2" 
                                HorizontalAlignment="Right" 
                                TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel x:Name="question5"
        Margin="0">
                            <TextBlock x:Name="HeadingQuest5"
                                Style="{StaticResource Heading}"
                                FontSize="28"
                                HorizontalAlignment="Left"
                                Text="{StaticResource Question5}"/>

                            <Slider x:Name="Slider5"
                                    Style="{StaticResource CustomSliderStyle}"
                                    Minimum="0"
                                    Maximum="2"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"
                                    Margin="-15 0 -15 0"
                                    Value="{Binding SliderValue5, Mode=TwoWay}"/>

                            <Grid Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                Text="{StaticResource Question5_Value1}" 
                                Style="{StaticResource TextSlider}" 
                               Grid.Column="0" 
                                HorizontalAlignment="Left" />
                                <TextBlock 
                                Text="{StaticResource Question5_Value2}" 
                                Style="{StaticResource TextSlider}"
                               Grid.Column="1" 
                                HorizontalAlignment="Center" />
                                <TextBlock 
                                Text="{StaticResource Question5_Value3}" 
                                Style="{StaticResource TextSlider}"
                               Grid.Column="2" 
                                HorizontalAlignment="Left" 
                                TextAlignment="Right" Margin="32,0,0,0" Width="261"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Button x:Name="SendReply"
                    Width="445"
                    Height="109"
                    HorizontalAlignment="Left"
                    Margin="0 42 0 0"
                    Style="{StaticResource white_btn}"
                    Click="NavigateToResult">
                    Отправить ответы
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
