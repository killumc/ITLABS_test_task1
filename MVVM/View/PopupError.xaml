<UserControl x:Class="Poll_ver2.MVVM.View.PopupError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="713" d:DesignWidth="960">
    <Border 
               BorderBrush="Gray" BorderThickness="1" 
               Padding="120"
               CornerRadius="36">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/Resourses/background.png"/>
        </Border.Background>
        <StackPanel Margin="0,0,0,-20">
            <TextBlock 
               FontWeight="SemiBold"
               Margin="0 0 0 24"
               Style="{StaticResource Heading}"
               Text="{StaticResource PopupErrorTitle}" 
                Width="516"/>

            <TextBlock
                TextAlignment="Center"
                FontSize="36"
                Style="{StaticResource Text}">
                <Run Text="{StaticResource PopupErrorText1}"/>
                <LineBreak/>
                <Run Text="{StaticResource PopupErrorText2}"/>
            </TextBlock>

            <StackPanel Margin="0 95 0 0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button
                   Height="94"
                   Width="338"
                   FontSize="24"
                   Margin="0 0 32 0"
                   Style="{StaticResource transparent_btn}"
                   Content="{StaticResource GoMain}"
                    Command="{Binding NavigateToHomeCommand}"/> 
                <Button
                    Height="94"
                    Width="338"
                    FontSize="24"
                    Style="{StaticResource white_btn}"
                    Content="{StaticResource Return}"
                    Command="{Binding ErrorPopup_ClouseCommand}"/>
            </StackPanel>
           
        </StackPanel>
    </Border>
</UserControl>
