<Page
    x:Class="Poll_ver2.MVVM.View.ResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Poll_ver2.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ResultView"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">


    <!--  анимация попап  -->
    <Page.Resources>
        <Storyboard x:Key="FadeInOverlay">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="0.65"
                Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="FadeOutOverlay">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0.65"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid x:Name="RootGrid">

            <Rectangle
                x:Name="Overlay"
                Panel.ZIndex="1"
                Fill="#020B07"
                Opacity="0"
                Visibility="Collapsed" />

            <Grid Width="1080" Height="1920">


                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Width="368"
                    Margin="60,60,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Assets/Resourses/logo.png" />


                <StackPanel Grid.Row="2" Margin="142,76,142,0">

                    <TextBlock
                        x:Name="Heading_Page2"
                        Style="{StaticResource Heading}"
                        Text="{Binding Heading}" />


                    <TextBlock
                        x:Name="Text1_Page3"
                        Margin="0,40,0,24"
                        Style="{StaticResource Text}"
                        Text="{Binding Text1}" />


                    <TextBlock
                        x:Name="Text1_1_Page3"
                        Margin="0,0,0,40"
                        Style="{StaticResource Text}"
                        Text="{Binding Text1_1}" />


                    <TextBlock
                        x:Name="Text2_Page3"
                        Margin="0,0,0,32"
                        Style="{StaticResource Text}"
                        Text="{StaticResource Result}" />

                    <StackPanel x:Name="Paragraph1">
                        <TextBlock
                            x:Name="Paragraph1_Heading_Page3"
                            Margin="0,0,0,16"
                            Style="{StaticResource HeadingParagraph}"
                            Text="{Binding Paragraph1Heading}" />

                        <TextBlock
                            x:Name="Paragraph1_Text_Page3"
                            FontSize="18"
                            Style="{StaticResource Text}"
                            Text="{Binding Paragraph1Text}" />

                    </StackPanel>


                    <StackPanel x:Name="Paragraph2">
                        <TextBlock
                            x:Name="Paragraph2_Heading_Page3"
                            Style="{StaticResource HeadingParagraph}"
                            Text="{Binding Paragraph2Heading}" />

                        <TextBlock
                            x:Name="Paragraph2_Text_Page3"
                            FontSize="18"
                            Style="{StaticResource Text}"
                            Text="{Binding Paragraph2Text}" />

                    </StackPanel>


                    <StackPanel x:Name="Paragraph3">
                        <TextBlock
                            x:Name="Paragraph3_Heading_Page3"
                            Style="{StaticResource HeadingParagraph}"
                            Text="{Binding Paragraph3Heading}" />

                        <TextBlock
                            x:Name="Paragraph3_Text_Page3"
                            FontSize="18"
                            Style="{StaticResource Text}"
                            Text="{Binding Paragraph3Text}" />

                    </StackPanel>


                    <Grid x:Name="Feedback_Form" Margin="0,72,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="FeedbackText_Page3"
                            Grid.ColumnSpan="2"
                            Width="644"
                            HorizontalAlignment="Left"
                            Style="{StaticResource Text}"
                            Text="{StaticResource PageResultEmail}" />


                        <TextBox
                            x:Name="TextboxEmail"
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="0,32,0,16"
                            Style="{StaticResource EmailTextBoxStyle}"
                            Tag="Email"
                            Text="{Binding UserEmail}" />

                        <StackPanel
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,92"
                            Orientation="Horizontal">
                            <CheckBox
                                x:Name="AgreementCheckBox"
                                IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource CustomCheckboxStyle}" />

                            <TextBlock
                                Width="639"
                                FontSize="20"
                                Style="{StaticResource Text}">
                                <Run Text="{StaticResource ResultView_linktext1}" />
                                <Hyperlink Command="{Binding PoliticPopup_OpenCommand}" Style="{StaticResource HyperLinkStyle}">
                                    <Run Text="{StaticResource ResultView_linktext2}" />
                                </Hyperlink>
                                <Run Text="{StaticResource ResultView_linktext3}" />
                                <Hyperlink Command="{Binding AgreementPopup_OpenCommand}" Style="{StaticResource HyperLinkStyle}">
                                    <Run Text="{StaticResource ResultView_linktext4}" />
                                </Hyperlink>
                            </TextBlock>

                        </StackPanel>

                        <Button
                            x:Name="Btn_Clouse_Page3"
                            Grid.Row="3"
                            Grid.Column="0"
                            Width="382"
                            Height="94"
                            Command="{Binding NavigateToHomeCommand}"
                            Content="{StaticResource Complete}"
                            FontSize="24"
                            Style="{StaticResource transparent_btn}" />


                        <Button
                            x:Name="Btn_GetResults"
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="382"
                            Height="94"
                            Command="{Binding NavigateToFinalCommand}"
                            Content="Получить результаты"
                            FontSize="24"
                            Style="{StaticResource white_btn}" />
                    </Grid>
                </StackPanel>



            </Grid>

            <Popup
                x:Name="PopupPolitic"
                Width="960"
                Height="1800"
                AllowsTransparency="True"
                IsOpen="{Binding IsPoliticPopupOpen, Mode=TwoWay}"
                Placement="Center"
                StaysOpen="False">
                <local:PopupPolitic DataContext="{Binding}" />
            </Popup>



            <Popup
                x:Name="PopupAgreement"
                Width="960"
                Height="1122"
                AllowsTransparency="True"
                Closed="Popup_Closed"
                IsOpen="{Binding IsAgreementPopupOpen}"
                Opened="Popup_Opened"
                Placement="Center"
                StaysOpen="False">
                <local:PopupAgreement DataContext="{Binding}" />
            </Popup>

            <Popup
                x:Name="PopupError"
                Width="960"
                Height="713"
                AllowsTransparency="True"
                Closed="Popup_Closed"
                IsOpen="{Binding IsErrorPopupOpen}"
                Opened="Popup_Opened"
                Placement="Center"
                StaysOpen="False">
                <local:PopupError DataContext="{Binding}" />
            </Popup>

        </Grid>
    </Viewbox>
</Page>
